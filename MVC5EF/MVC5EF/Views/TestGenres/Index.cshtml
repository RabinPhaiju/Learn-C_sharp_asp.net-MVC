
@model IEnumerable<MVC5EF.Models.DBContent.Genre>
@{
    ViewBag.Title = "Index of Test Genres Model";
}

<h2>@ViewBag.Title</h2>

<p>@Html.ActionLink("Create New", "Create")</p>
<div>
    <table class="table">
        <tr class="alert-info">
            <th>@Html.DisplayNameFor(model=>model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Description)
            </th>
            <th>Actions</th>
        </tr>
        @foreach(var item in Model)
            {
    <tr>
        <td class="alert-success">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="alert-danger">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td class="alert-link">
            @Html.ActionLink("Edit", "Edit", new { id = item.GenreId }) |
            @Html.ActionLink("Details", "Details", new { id = item.GenreId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GenreId })
        </td>
    </tr>
            }
    </table>
</div>